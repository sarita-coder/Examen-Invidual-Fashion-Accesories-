mixin medias-oferta(imagen,texto,numero)
	.media
		.media-left
			a(href="")
				img.media-object(src=imagen)
		.media-body
			h5.media-heading=texto
			p 1 x $
				span=numero 
				span.fa.fa-times
mixin  thumbanil-main2(imagen,transparent)
	.col-sm-3
		.thumbnail
			img(src=imagen)
			.caption.text-center
				h6 Deliver Wide
				p
					span.fa.fa-star
					span.fa.fa-star
					span.fa.fa-star
					span.fa.fa-star-o
					span.fa.fa-star-o
				if transparent==0
					p $218.00
				else 
					p $242.00
						span $218.00
