		img(src=i5 width="100%")
	.col-sm-2
		img(src=i6 width="100%")
mixin space-main(texto, texto2,texto3)
	.col-sm-12.text-center
		a(href="")
			span.fa.fa-chevron-left
			span=texto
			span=texto2
			span=texto3
			span.fa.fa-chevron-right
mixin media-main-3(imagen,a)
	.col-sm-4
		.media
			.media-left
				a
					img.media-object(src=imagen)
			.media-body
				h4.media-heading Deliver Wide
				
					p
						if a==0
							span $
							span 242.00
						else
						span $
						span 21
						span 8
						span .00
					p
						span.fa.fa-star
						span.fa.fa-star
						span.fa.fa-star
						span.fa.fa-star-o
						span.fa.fa-star-o
					a 
						span.fa.fa-shopping-cart Add to Cart
